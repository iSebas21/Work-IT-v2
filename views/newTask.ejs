<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link href='https://unpkg.com/boxicons@2.0.9/css/boxicons.min.css' rel='stylesheet'>
    <link rel="stylesheet" type="text/css" href="/resources/css/style.css">
    <title>Dashboard</title>
  </head>
  <body>
    <% if (login) { %>
        <nav class="green navbar navbar-expand-lg navbar-light bg-light">
            <div class="container-fluid">
                <text class="navbar-brand" href="#">Administrador</text>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                  <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                  <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                      <a class="nav-link active" aria-current="page" href="/admin/dashboard/employee">Empleados</a>
                    </li>
                    <li class="nav-item">
                      <a class="nav-link active" aria-current="page" href="/admin/dashboard/tasks">Tareas</a>
                    </li>
                    <li class="nav-item">
                      <a class="nav-link active" aria-current="page" href="/admin/msg">Mensajes</a>
                    </li> 
                  </ul>
                  <form class="d-flex">
                    <a class="btn btn-outline-danger" href="/admin/logout"><i class='bx bx-door-open' ></i></a>
                  </form>

                </div>
              </div>
          </nav>
          <div class="container mt-4">     
            <div class="card border-secondary">  
                <div class="card-header">Nueva Actividad</div>
                <div class="card-body">
                    <form action="/newTask" method="POST">
                        <div class="mb-3">
                            <label for="user" class="form-label">Titulo</label>
                            <input type="text" class="form-control" id="title" name="pro_title" tabindex="1" required>
                        </div>  
                        <div class="mb-3">
                            <label for="user" class="form-label">Descripcion</label>
                            <input type="text" class="form-control" id="description" name="pro_description" tabindex="1" required>
                        </div> 
                        <div class="mb-3">
                            <label for="user" class="form-label">Archivo (Opcional)</label>
                            <input type="file" class="form-control" id="file" name="pro_file" tabindex="1">
                        </div> 
                        <div class="mb-3">
                            <label for="user" class="form-label">Fecha de entrega</label>
                            <input type="date" class="form-control" id="limit_time" name="pro_limit" tabindex="1" required>
                        </div>   
                        <div class="mb-3">
                            <label for="user" class="form-label">Encargado</label>
                            <select id="pro_employee" name="pro_employee" class="form-select" aria-label="Default select example" tabindex="2" required>
                                <% results.forEach((user) => { %>
                                <option value="<%= user.employee_name %>" selected><%= user.employee_name %></option>
                                <% }) %>               
                            </select>
                        </div>                                   
                        <button type="submit" class="btn btnAddMSG" tabindex="5">Asignar</button>
                        <a href="/admin/dashboard/employee" class="btn btnCancel2">Cancelar</a>
                    </form>
                </div>
                </div>        
            </div>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
        <% if (typeof alert != "undefined")  { %>
            <script>
            Swal.fire({
              title:'<%= alertTitle %>',
              text:'<%= alertMessage %>',
              icon:'<%= alertIcon %>',
              showConfirmButton: <%= showConfirmButton %>,
              timer: <%= timer %>
            }).then(()=>{
              window.location='/<%= ruta %>'
            })
            </script>
           <% } %>

    <%} else { %>
        <h1><strong><%= name %></strong></h1>
        <a href="/" class='a-login-admin'>Salir</a>
    <% } %>
  </body>
</html>